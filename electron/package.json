{
  "name": "accessclone",
  "version": "0.2.0",
  "description": "Convert Access databases to web applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-icon": "node scripts/generate-icon.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "verbose": true
  },
  "build": {
    "appId": "com.accessclone.app",
    "productName": "AccessClone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!__tests__/**",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      },
      {
        "from": "../skills",
        "to": "skills"
      },
      {
        "from": "../forms",
        "to": "forms"
      },
      {
        "from": "../ui/resources/public",
        "to": "ui/public"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
