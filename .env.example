# PolyAccess Environment Configuration
# Copy this file to .env and fill in your values

# PostgreSQL connection (individual variables)
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=polyaccess

# Or use a full connection string instead of individual variables
# DATABASE_URL=postgresql://postgres:your_password@127.0.0.1:5432/polyaccess

# Server port (default: 3001)
PORT=3001

# Anthropic API key (for AI chat features)
# ANTHROPIC_API_KEY=sk-ant-...
