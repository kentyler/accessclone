{
  "name": "polyaccess-server",
  "version": "0.1.0",
  "description": "Backend for PolyAccess form and database operations",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "jest --verbose",
    "test:db": "node -e \"process.env.POLYACCESS_DB_TESTS='1'; require('jest').run(['__tests__/db.schema-routing.test.js'])\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true
  }
}
